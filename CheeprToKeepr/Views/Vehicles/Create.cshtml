@model CheeprToKeepr.Models.ViewModels.VehicleViewModel

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*validation summary can be "All" to create validation div at top of form*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row" style="color:darkblue">
            <h2 class="pl-3">Register Vehicle</h2>

        </div>
        <div class="col-4">
            <label asp-for="Vehicle.Year"></label>
            <input asp-for="Vehicle.Year" class="form-control" id="Year" placeholder="Year">
            <span asp-validation-for="Vehicle.Year" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vehicle.MakeName"></label>
            <input asp-for="Vehicle.MakeName" class="form-control" id="MakeName" placeholder="Make">
            <span asp-validation-for="Vehicle.MakeName" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vehicle.ModelName1"></label>
            <input asp-for="Vehicle.ModelName1" class="form-control" id="ModelName1" placeholder="Model">
            <span asp-validation-for="Vehicle.ModelName1" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vehicle.ModelName2"></label>
            <input asp-for="Vehicle.ModelName2" class="form-control" id="ModelName2" placeholder="Optional">
            <span asp-validation-for="Vehicle.ModelName2" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vehicle.VehicleMileage"></label>
            <input asp-for="Vehicle.VehicleMileage" class="form-control" id="VehicleMileage" placeholder="Input Vehicle Mileage">
            <span asp-validation-for="Vehicle.VehicleMileage" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vehicle.TireMileage"></label>
            <input asp-for="Vehicle.TireMileage" class="form-control" id="TireMileage" placeholder="Input Tire  Mileage">
            <span asp-validation-for="Vehicle.TireMileage" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vehicle.MilesPerGallon"></label>
            (Esitmated)
            <input asp-for="Vehicle.MilesPerGallon" class="form-control" id="MilesPerGallon" placeholder="Input Avg. MPG">
            <span asp-validation-for="Vehicle.MilesPerGallon" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vehicle.UserID"></label>
            <select asp-for="Vehicle.UserID" asp-items="@Model.UserList" class="form-control"></select>
            <span asp-validation-for="Vehicle.UserID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-150" value="Register Vehicle" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-150">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

