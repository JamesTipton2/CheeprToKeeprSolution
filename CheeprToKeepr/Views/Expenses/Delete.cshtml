@model CheeprToKeepr.Models.Expense

@{
    ViewData["Title"] = "Delete";
}

<h3>Are you sure you want to delete this?</h3>
<form method="post" asp-action="DeletePost">
    <input asp-for="ExpenseID" hidden />
    <div class="border p-3">
        <div class="form-group row" style="color:darkblue">
            <h2 class="pl-3">Delete Expense</h2>
        </div>
        <div class="col-4">
            <label asp-for="ExpenseCategoryID"></label>
            <input asp-for="ExpenseCategoryID" disabled class="form-control">
        </div>
        <div class="col-4">
            <label asp-for="VehicleID"></label>
            <input asp-for="VehicleID" disabled class="form-control">
        </div>
        <div class="col-4">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control">
        </div>
        <div class="col-4">
            <label asp-for="ExpenseDateTime"></label>
            <input asp-for="ExpenseDateTime" disabled class="form-control">
        </div>
        <div class="col-4">
            <label asp-for="Cost"></label>
            <input asp-for="Cost" disabled class="form-control">
        </div>
        <div class="form-group row">
            <div class="col-8 offests-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-danger w-150" value="Delete" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-succes w-150">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>
