@model CheeprToKeepr.Models.ExpenseCategory
@{
    ViewData["Title"] = "Update";
}

<form method="post" asp-action="Update">
    <input asp-for="ExpenseCategoryID" hidden />
    <div class="border p-3">
        @*validation summary can be "All" to create validation div at top of form*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row" style="color:darkblue">
            <h2 class="pl-3">Edit Category</h2>

        </div>
        <div class="col-4">
            <label asp-for="ExpenseType"></label>
            <input asp-for="ExpenseType" class="form-control">
            <span asp-validation-for="ExpenseType" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-150" value="Update Category" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-150">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>

