@model CheeprToKeepr.Models.ViewModels.VendorViewModel

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row" style="color:darkblue">
            <h2 class="pl-3">Create Vendor</h2>
        </div>
        <div class="col-4">
            <label asp-for="Vendor.Name"></label>
            <input asp-for="Vendor.Name" class="form-control" id="Name" placeholder="Name">
            <span asp-validation-for="Vendor.Name" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vendor.City"></label>
            <input asp-for="Vendor.City" class="form-control" id="City" placeholder="City">
            <span asp-validation-for="Vendor.City" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vendor.State"></label>
            <input asp-for="Vendor.State" class="form-control" id="State" placeholder="State">
            <span asp-validation-for="Vendor.State" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vendor.PostalCode"></label>
            <input asp-for="Vendor.PostalCode" class="form-control">
            <span asp-validation-for="Vendor.PostalCode" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vendor.PhoneNumber"></label>
            <input asp-for="Vendor.PhoneNumber" class="form-control">
            <span asp-validation-for="Vendor.PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vendor.Email"></label>
            <input asp-for="Vendor.Email" class="form-control">
            <span asp-validation-for="Vendor.Email" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vendor.Website"></label>
            <input asp-for="Vendor.Website" class="form-control">
            <span asp-validation-for="Vendor.Website" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Vendor.VendorCategoryID"></label>
            <select asp-for="Vendor.VendorCategoryID" asp-items="@Model.CategoryList" class="form-control"></select>
            <span asp-validation-for="Vendor.VendorCategoryID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-150" value="Create Vendor" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-150">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>