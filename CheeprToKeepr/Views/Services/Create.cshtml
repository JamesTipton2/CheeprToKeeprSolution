@model CheeprToKeepr.Models.ViewModels.ServiceViewModel

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        @*validation summary can be "All" to create validation div at top of form*@
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row" style="color:darkblue">
            <h2 class="pl-3">Create Service</h2>
        </div>
        <div class="col-4">
            <label asp-for="Service.Name"></label>
            <input asp-for="Service.Name" class="form-control" id="Name" placeholder="Name">
            <span asp-validation-for="Service.Name" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Service.ServiceDateTime"></label>
            <input asp-for="Service.ServiceDateTime" class="form-control" id="ServiceDateTime" placeholder="Date">
            <span asp-validation-for="Service.ServiceDateTime" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Service.VehicleMilesAtService"></label>
            <input asp-for="Service.VehicleMilesAtService" class="form-control" id="VehicleMilesAtService" placeholder="Vehicle Miles At Service">
            <span asp-validation-for="Service.VehicleMilesAtService" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Service.ServiceCategoryID"></label>
            <select asp-for="Service.ServiceCategoryID" asp-items="@Model.CategoryList" class="form-control"></select>
            <span asp-validation-for="Service.ServiceCategoryID" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Service.VehicleID"></label>
            <select asp-for="Service.VehicleID" asp-items="@Model.VehicleList" class="form-control"></select>
            <span asp-validation-for="Service.VehicleID" class="text-danger"></span>
        </div>
        <div class="col-4">
            <label asp-for="Service.VendorID"></label>
            <select asp-for="Service.VendorID" asp-items="@Model.VendorList" class="form-control"></select>
            <span asp-validation-for="Service.VendorID" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-8 offset-2 row">
                <div class="col">
                    <input type="submit" class="btn btn-info w-150" value="Create Service" />
                </div>
                <div class="col">
                    <a asp-action="Index" class="btn btn-danger w-150">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>